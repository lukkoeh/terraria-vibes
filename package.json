{
  "name": "terraria-lite-infinite",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "start": "npm run dev:app",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "cross-env ELECTRON_START_URL=http://localhost:5173 wait-on tcp:127.0.0.1:5173 && electron .",
    "dev:app": "concurrently -k -n \"VITE,ELECTRON\" -c \"cyan,magenta\" \"npm:dev\" \"npm:electron\"",
    "preview:app": "npm run build && electron .",
    "build:app": "npm run build && electron-builder"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.34.1",
    "pixi.js": "^7.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.codex.terraria.lite.infinite",
    "productName": "Terraria Lite Infinite",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    }
  }
}
